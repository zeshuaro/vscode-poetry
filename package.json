{
  "name": "vscode-python-poetry",
  "displayName": "Python Poetry",
  "description": "Python Poetry support for VS Code to manage Poetry commands",
  "version": "0.0.2",
  "publisher": "zeshuaro",
  "repository": {
    "type": "git",
    "url": "https://github.com/zeshuaro/vscode-poetry"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-python-poetry.addPackage",
    "onCommand:vscode-python-poetry.addDevPackage",
    "onCommand:vscode-python-poetry.removePackage",
    "onCommand:vscode-python-poetry.removeDevPackage",
    "onCommand:vscode-python-poetry.updatePackages",
    "onCommand:vscode-python-poetry.updatePackagesNoDev",
    "onCommand:vscode-python-poetry.updatePackage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-python-poetry.addPackage",
        "title": "Add package(s)",
        "category": "Poetry"
      },
      {
        "command": "vscode-python-poetry.addDevPackage",
        "title": "Add dev package(s)",
        "category": "Poetry"
      },
      {
        "command": "vscode-python-poetry.removePackage",
        "title": "Remove package(s)",
        "category": "Poetry"
      },
      {
        "command": "vscode-python-poetry.removeDevPackage",
        "title": "Remove dev package(s)",
        "category": "Poetry"
      },
      {
        "command": "vscode-python-poetry.updatePackages",
        "title": "Update all packages",
        "category": "Poetry"
      },
      {
        "command": "vscode-python-poetry.updatePackagesNoDev",
        "title": "Update all packages (ignore dev)",
        "category": "Poetry"
      },
      {
        "command": "vscode-python-poetry.updatePackage",
        "title": "Update selected package(s)",
        "category": "Poetry"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "lint": "eslint src --ext ts && prettier src/**/*.ts --check",
    "format": "eslint src --ext ts --fix && prettier src/**/*.ts --write",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "7.2.0",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.33",
    "@types/sinon": "10.0.11",
    "@types/vscode": "1.66.0",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "@vscode/test-electron": "2.1.3",
    "eslint": "8.14.0",
    "glob": "7.2.0",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "prettier": "2.6.2",
    "sinon": "13.0.2",
    "typescript": "4.6.4"
  }
}
